<%= form_for @recipe do |f| %>
  <%= f.text_area :title, placeholder: "Title" %>
  <br>
  <%= f.text_area :ingredients, placeholder: "Ingredients" %>
  <br>
  <%= f.text_area :instructions, placeholder: "Instructions"%>
  <br>
  <%= f.text_area :description, placeholder: "Description" %>
  <br>
  <%= f.label :avatar, "Image", name: 'Choose File' %>
  <%= f.file_field :avatar %>
  <br>

  <%= f.submit "Save Recipe" %>
<% end %>
